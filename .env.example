# ===========================================
# Careca.ai - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Whisper Model: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL=medium

# Device: cpu or cuda (if you have NVIDIA GPU)
DEVICE=cuda

# Compute type: float16 (GPU), int8 (CPU)
COMPUTE_TYPE=float16

# File limits
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=mp3,wav,m4a,ogg,webm,flac,opus,ptt

# Maintenance
CLEANUP_AFTER_HOURS=24

# ===========================================
# SECURITY - REQUIRED! Generate unique values
# ===========================================
# Run: .\scripts\init-secrets.ps1 to auto-generate
# Or manually: python -c "import secrets; print(secrets.token_hex(32))"

SECRET_KEY=
ADMIN_PASSWORD=
DB_PASSWORD=
REDIS_PASSWORD=

# CORS origins (comma-separated, use HTTPS in production)
ALLOWED_ORIGINS=https://localhost,https://192.168.15.3

# ===========================================
# DATABASE - PostgreSQL (Docker)
# ===========================================
DB_USER=careca
DB_NAME=carecadb

# SQLite fallback (used if DATABASE_URL is not set)
DATABASE_PATH=/app/data/transcriptions.db

# ===========================================
# WORKER CONFIGURATION
# ===========================================
WORKER_MAX_MEMORY_MB=3500
WORKER_MAX_JOBS=100

# ===========================================
# MONITORING (Optional)
# ===========================================
GRAFANA_PASSWORD=admin

