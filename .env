# Model: tiny, base, small, medium, large-v2, large-v3
# Recommended: small for balance, medium for quality, large-v3 for best accuracy
WHISPER_MODEL=medium

# Device: cpu or cuda (if you have NVIDIA GPU)
DEVICE=cpu

# Compute type: int8 (default for CPU), float16 (for GPU)
COMPUTE_TYPE=int8

# File limits
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=mp3,wav,m4a,ogg,webm,flac

# Maintenance
CLEANUP_AFTER_HOURS=24
